<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#000000"
    android:fillViewport="false"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1">

            <ImageView
                android:id="@+id/profile_image_user"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_launcher"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/profile_user_details"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:layout_toRightOf="@id/profile_image_user"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <FrameLayout
                android:layout_below="@id/profile_user_details"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="left"
                    android:textColor="#ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/gun"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                     />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/kill_time"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:text="Kill Time"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_gravity="right"
                    android:id="@+id/kill_time_detail"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>



        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:text="Score"
                android:textColor="#efc500"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="100dp" />
            <TextView
                android:gravity="center"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:id="@+id/profile_score"
                android:textSize="20sp"

                android:layout_alignParentRight="true"
                android:background="@drawable/profile_score_ring"
                android:layout_width="150dp"
                android:layout_height="150dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:text="Win"
                android:layout_centerVertical="true"
                android:textColor="#26cf7b"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="100dp" />
            <TextView
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginRight="25dp"
                android:textColor="#ffffff"
                android:id="@+id/profile_win"
                android:textSize="20sp"

                android:layout_alignParentRight="true"
                android:background="@drawable/profile_win_ring"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:text="Loose"
                android:layout_centerVertical="true"
                android:textColor="#ff5151"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="100dp" />
            <TextView
                android:layout_marginRight="25dp"
                android:textColor="#ffffff"
                android:id="@+id/profile_loose"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/profile_loose_ring"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:text="Donate"
                android:textColor="#32dbfa"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="100dp" />

            <TextView
                android:layout_marginRight="25dp"
                android:textColor="#ffffff"
                android:id="@+id/profile_donate"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/profile_donate_ring"
                android:layout_width="100dp"
                android:layout_height="100dp" />

        </RelativeLayout>
  </LinearLayout>
</ScrollView>

